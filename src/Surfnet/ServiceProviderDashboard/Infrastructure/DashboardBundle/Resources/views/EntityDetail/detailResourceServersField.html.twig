{% if value is not empty %}
<div class="detail">
    {% if informationPopup is defined %}
        <span data-tippy-content="{{ informationPopup|trans }}" class="help-button">
            <i class="fa fa-question-circle"></i>
        </span>
    {% endif %}
    <label>{{ label }}</label>
    <table class="resource-servers">
        <thead>
            <th>{{ 'entity.detail.metadata.client_id'|trans }}</th>
            <th>{{ 'entity.detail.metadata.name_en'|trans }}</th>
            <th>&nbsp;</th>
        </thead>
        <tbody>
        {% for resourceServer in value %}
            {% set rsLink = path('entity_detail', {id: resourceServer.id, serviceId: entity.actions.serviceId, manageTarget: entity.actions.environment}) %}
            <tr>
                <td>{{ resourceServer.metadata.nameEn }}</td>
                <td>{{ resourceServer.metadata.entityId }}</td>
                <td><a href="{{ rsLink }}">
                        <i class="fa fa-book" aria-hidden="true"></i>
                        {{ 'entity.list.action.view'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
